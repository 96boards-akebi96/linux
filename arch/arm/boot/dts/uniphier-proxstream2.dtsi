		reg = <0x550000b0 0x8>;
		gpio-controller;
		#gpio-cells = <2>;
		gpio-ranges = <&pinctrl 0 117 1>,
			      <&pinctrl 1 143 7>;
	};

	port20x: gpio@550000b8 {
