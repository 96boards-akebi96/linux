		gpio-ranges = <&pinctrl 0 74 1>,
			      <&pinctrl 1 91 1>,
			      <&pinctrl 2 27 3>,
			      <&pinctrl 5 75 1>,
			      <&pinctrl 6 20 1>,
			      <&pinctrl 7 26 1>;
	};

	port18x: gpio@550000a8 {
		compatible = "socionext,uniphier-gpio";
		reg = <0x550000a8 0x8>;
		gpio-controller;
		#gpio-cells = <2>;
		gpio-ranges = <&pinctrl 0 109 8>;
