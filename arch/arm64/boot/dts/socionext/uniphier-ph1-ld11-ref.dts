/dts-v1/;
#include "uniphier-ph1-ld11.dtsi"
#include "uniphier-ref-daughter.dtsi"
#include "uniphier-support-card.dtsi"

/ {
	model = "UniPhier PH1-LD11 Reference Board";
	compatible = "socionext,ph1-ld11-ref", "socionext,ph1-ld11";

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "earlycon";
	};

	aliases {
		serial0 = &serial0;
		serial1 = &serial1;
		serial2 = &serialsc;
		serial3 = &serial3;
		i2c0 = &i2c0;
		i2c1 = &i2c1;
		i2c2 = &i2c2;
		i2c3 = &i2c3;
		i2c4 = &i2c4;
		i2c5 = &i2c5;
		ethernet0 = &eth;
		ethernet1 = &ethsc;
	};

	memory {
		device_type = "memory";
		reg = <0 0x80000000 0 0x40000000>;
	};
};

&ethsc {
	interrupts = <0 8>;
};

&serialsc {
	interrupts = <0 8>;
};

&serial0 {
	status = "okay";
};

&i2c0 {
	status = "okay";

	audio_codec: tas5707a@1d {
		compatible = "ti,tas5711";
		reg = <0x1d>;
		mclk = <384>;
		reset-gpios = <&gpio UNIPHIER_GPIO_PORT(23, 4) GPIO_ACTIVE_LOW>;
		pdn-gpios = <&gpio UNIPHIER_GPIO_PORT(23, 5) GPIO_ACTIVE_LOW>;
		#sound-dai-cells = <0>;
	};
};

&sound_codec_sp {
	sound-dai = <&audio_codec>;
};

&emmc {
	status = "okay";
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};

&usb2 {
	status = "okay";
};

&eth {
	status = "okay";
	phy-handle = <&ethphy>;
};

&mdio {
	ethphy: ethphy@1 {
		reg = <1>;
	};
};
