menuconfig CLK_UNIPHIER
	bool "Clock drivers for UniPhier SoCs"
	depends on ARCH_UNIPHIER
	depends on OF
	default y
	help
	  Supports clock drivers for UniPhier SoCs.

if CLK_UNIPHIER

