	port16x: gpio@55000088 {
		compatible = "socionext,uniphier-gpio";
		reg = <0x55000088 0x8>;
		gpio-controller;
		#gpio-cells = <2>;
		gpio-ranges = <&pinctrl 0 126 1>,
			      <&pinctrl 1 72 2>,
			      <&pinctrl 3 92 1>,
			      <&pinctrl 4 177 1>,
			      <&pinctrl 5 93 2>,
