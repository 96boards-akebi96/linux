/dts-v1/;
#include "uniphier-ph1-ld11.dtsi"
#include "uniphier-support-card.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "UniPhier PH1-LD11 Global Board (REF_LD11_GP)";
	compatible = "socionext,ph1-ld11-global", "socionext,ph1-ld11";

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "earlycon";
	};

	aliases {
		serial0 = &serial0;
		serial1 = &serial1;
		serial2 = &serialsc;
		serial3 = &serial3;
		i2c0 = &i2c0;
		i2c1 = &i2c1;
		i2c2 = &i2c2;
		i2c3 = &i2c3;
		i2c4 = &i2c4;
		i2c5 = &i2c5;
		ethernet0 = &eth;
		ethernet1 = &ethsc;
};

	memory {
		device_type = "memory";
		reg = <0 0x80000000 0 0x40000000>;
	};
};

&ethsc {
	interrupts = <0 52 4>;
};

&serialsc {
	interrupts = <0 52 4>;
};

&serial0 {
	status = "okay";
};

&i2c0 {
	status = "okay";

	audio_codec: tas5707a@1d {
		compatible = "ti,tas5711";
		reg = <0x1d>;
		mclk = <384>;
		reset-gpios = <&port23x 4 GPIO_ACTIVE_LOW>;
		pdn-gpios = <&port23x 5 GPIO_ACTIVE_LOW>;
		#sound-dai-cells = <0>;
	};
};

&sound_codec_sp {
	sound-dai = <&audio_codec>;
};

&emmc {
	status = "okay";
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};

&usb2 {
	status = "okay";
};

&eth {
	status = "okay";
	phy-handle = <&ethphy>;
};

&mdio {
	ethphy: ethphy@1 {
		reg = <1>;
	};
};

&nand {
	status = "okay";

	/* setting for nand bad block management */
	boot_block_bank0 = <8>;
	boot_block_bank1 = <0>;
	alt_block_bank0 = <126>;
	alt_block_bank1 = <0>;
	nand-on-flash-bbt;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "total area";
			reg = <0x0 0x40000000>;
		};
	};
};

